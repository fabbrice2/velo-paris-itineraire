<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Velib Data</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='css/listes_velib.css') }}">
    
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
    crossorigin=""/>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
     integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
     crossorigin="">
    </script>

    <style>
      #map { height: 180px; }
    </style>
  </head>
  <body>
    <h1>Velib Data</h1>

    <a href="{{ url_for('home') }}"
      ><button id="fetchDataBtn">Accueil</button></a
    >
  
    <div id="map"></div>
    <div id="dataContainer">
      <table>
        <tr>
          <th>Adresse</th>
          <th>Nombre de Vélibs Disponibles</th>
          <th>Type Mécanique</th>
          <th>Type Electrique</th>
          <th>Nombre de Places Libres</th>
          <th>My Favorite</th>
        </tr>
        {% set sorted_records = records | sort(attribute='name') %} {% for
            record in sorted_records %} {% if
            record['nom_arrondissement_communes'] =='Paris' %}
        <tr>
          <td>{{ record['name'] }}</td>
          <td>{{ record['numbikesavailable'] }}</td>
          <td>{{ record['mechanical'] }}</td>
          <td>{{ record['ebike'] }}</td>
          <td>{{ record['numdocksavailable'] }}</td>
          <td><a href='/ajouterFavoris'><button class='fav'>Fav</button><a></td>
        </tr>

        {% endif %} {% endfor %}
      </table>
    </div>

 


<script>
  var coordinates = {{ coordinates | tojson }};
</script>


  
 <script src="{{ url_for('static', filename='js/listes_velib.js') }}"> </script>
 

  </body>
</html>
