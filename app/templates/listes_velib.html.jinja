<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Velib Data</title>
  <link rel="stylesheet" href="{{ url_for('static', filename='css/listes_velib.css') }}">

  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
    integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>

  <style>
    #map {
      height: 180px;
    }
  </style>
</head>

<body>
  <h1>Velib Data</h1>

  <a href="{{ url_for('home') }}"><button id="fetchDataBtn">Accueil</button></a>

  <div id="map"></div>
  <div id="dataContainer">
    <table>
      <tr>
        <th>adresse</th>
        <th>nombre de vélibs disponibles</th>
        <th>type mecanique</th>
        <th>type electrique</th>
        <th>nombre de places libres</th>
        <th>My Favorite</th>
      </tr>
      {% set sorted_records = records | sort(attribute='name') %} {% for
      record in sorted_records %} {% if
      record['nom_arrondissement_communes'] =='Paris' %}
      <form action="/favorites" method="post">
        <tr>
          <td>{{ record['name'] }}</td>
          <td>{{ record['numbikesavailable'] }}</td>
          <td>{{ record['mechanical'] }}</td>
          <td>{{ record['ebike'] }}</td>
          <td>{{ record['numdocksavailable'] }}</td>
          <td>
            <form action="/favorites" method="post">
              <input type="hidden" name="station_id" value="{{ record['stationcode'] }}">
              <input type="hidden" name="station_name" value="{{ record['name'] }}">
              <button type="submit" class='fav'>Fav</button>
            </form>
          </td>
        </tr>
      </form>
      {% endif %} {% endfor %}
    </table>

  </div>




  <script>
    var coordinates = {{ coordinates | tojson }};
  </script>

  <script>

    const favButtons = document.querySelectorAll('.fav');


    favButtons.forEach(button => {
      button.addEventListener('click', function () {

        const row = this.closest('tr');


        const name = row.querySelector('td:nth-child(1)').textContent;
        const numbikesavailable = row.querySelector('td:nth-child(2)').textContent;
        const mechanical = row.querySelector('td:nth-child(3)').textContent;
        const ebike = row.querySelector('td:nth-child(4)').textContent;
        const numdocksavailable = row.querySelector('td:nth-child(5)').textContent;

        console.log("Nom: ", name);
        console.log("Nombre de vélibs disponibles: ", numbikesavailable);
        console.log("Type mécanique: ", mechanical);
        console.log("Type électrique: ", ebike);
        console.log("Nombre de places libres: ", numdocksavailable);


        const data = {
          station_name: name,
          numbikesavailable: numbikesavailable,
          mechanical: mechanical,
          ebike: ebike,
          numdocksavailable: numdocksavailable
        };


        const form = document.getElementById('favorite_form');
        form.elements['station_name'].value = name;
        form.submit();
      });
    });
  </script>




  <script src="{{ url_for('static', filename='js/listes_velib.js') }}"> </script>


</body>

</html>